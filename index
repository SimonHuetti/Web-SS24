<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Canvas</title>
  </head>

  <body>
    <canvas id="MeinCanvas" width="400" height="400"></canvas>
    Please press Enter!
    <script>
      //Als globale Variablen deklariert um mit allen Functions darauf zugreifen zu kÃ¶nnen
      var x = 20;
      var y = 200;
      var dx = 0.5;
      var dy = 1;
      var R = 10;
      var padlx = 0;

      var padly = 400 - 10;
      var padlHeight = 10;
      var padlWidth = 100;
      var enter = false;
      var myInterval;
      var context = MeinCanvas.getContext("2d");
      var WIDTH = MeinCanvas.width;
      var HEIGHT = MeinCanvas.height;

      function init() {
        document.addEventListener("keydown", function (event) {
          console.log(event);
          console.log(event.key);

          if ((event.key == "ArrowLeft") & (padlx > 0)) {
            padlx = padlx - 15;
          }
          if ((event.key == "ArrowRight") & (padlx + 150 < WIDTH)) {
            padlx = padlx + 15;
          }
          if (event.key == "Enter") {
            if (!enter) {
              clearInterval(myInterval);
              myInterval = setInterval(draw, 5);
              enter = true;
            }
          }
        });

        while (enter) {
          return;
        }
      }

      function draw() {
        clear();
        ball(x, y, 10);
        padle(padlx, padly, padlWidth, padlHeight);
        if (x > WIDTH - R || x < 0 + R) {
          dx = -dx;
        }
        if (
          (y > HEIGHT - R - padlHeight &&
            padlx <= x + R &&
            padlx + padlWidth >= x - R) ||
          y < 0 + R
        ) {
          dy = -dy * 1.1;
          dx = dx * 1.1;
        }
        if (y > HEIGHT - R) {
          x = 20;
          y = 200;
          enter = false;
          dx = 0.5;
          dy = 1;
        }
        if (enter) {
          x = x + dx;
          y = y - dy;
        }
      }

      init();

      function padle(x, y, width, height) {
        context.fillStyle = "#000000";
        context.beginPath();
        context.fillRect(x, y, width, height);
        context.closePath();
        context.fill();
      }

      function ball(x, y, r) {
        context.fillStyle = "#00A308";
        context.beginPath();
        context.arc(x, y, r, 0, Math.PI * 2, true);
        context.closePath();
        context.fill();
      }

      function clear() {
        context.clearRect(0, 0, WIDTH, HEIGHT);
      }
    </script>
  </body>
</html>
